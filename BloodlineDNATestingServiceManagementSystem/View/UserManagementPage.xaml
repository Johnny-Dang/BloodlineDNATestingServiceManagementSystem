<UserControl x:Class="BloodlineDNATestingServiceManagementSystem.View.UserManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BloodlineDNATestingServiceManagementSystem.View">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#DDD" BorderThickness="1" >
            <StackPanel>

                <!-- Tiêu đề -->
                <TextBlock Text="👤 Quản lý người dùng"
                           FontSize="24" FontWeight="Bold"
                           Foreground="#3E3E3E"
                           Margin="0,0,0,20"/>

                <!-- Nút thao tác -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20" >

                    <!-- Thêm mới -->
                    <Button Width="120" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="BtnAdd_Click"
            Padding="10,5" Margin="0,0,10,0" BorderThickness="0" Cursor="Hand">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Thêm mới" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Sửa -->
                    <Button Width="100" Height="40" Background="#FFC107" Foreground="Black" FontWeight="Bold" Click="BtnEdit_Click"
            Padding="10,5" Margin="0,0,10,0" BorderThickness="0" Cursor="Hand">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Sửa" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Xóa -->
                    <Button Width="100" Height="40" Background="#F44336" Foreground="White" FontWeight="Bold" Click="BtnDelete_Click"
            Padding="10,5" BorderThickness="0" Cursor="Hand">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Xóa" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <!-- DataGrid -->
                <DataGrid x:Name="dgUsers"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          Height="450"
                          RowHeight="40"
                          ColumnHeaderHeight="40"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F9F9F9"
                          BorderThickness="1"
                          BorderBrush="#CCC"
                          FontSize="14"
                          HeadersVisibility="Column"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="🆔 ID" Binding="{Binding UserId}" Width="*" />
                        <DataGridTextColumn Header="👤 Họ tên" Binding="{Binding FullName}" Width="2*" />
                        <DataGridTextColumn Header="📧 Email" Binding="{Binding Email}" Width="2*" />
                        <DataGridTextColumn Header="📞 SĐT" Binding="{Binding PhoneNumber}" Width="*" />
                        <DataGridTextColumn Header="🔒 Trạng thái" Binding="{Binding Status}" Width="*" />
                        <DataGridTextColumn Header="🎭 Vai trò" Binding="{Binding Role.RoleName}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
