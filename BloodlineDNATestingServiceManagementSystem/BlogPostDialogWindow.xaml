<Window x:Class="BloodlineDNATestingServiceManagementSystem.View.BlogPostDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin bài viết" Height="450" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border Padding="20" Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="📝 Nhập thông tin bài viết" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Tiêu đề:"/>
            <TextBox x:Name="txtTitle" Margin="0,5,0,10"/>

            <TextBlock Text="Nội dung:"/>
            <TextBox x:Name="txtContent" AcceptsReturn="True" Height="150" Margin="0,5,0,10"/>

            <TextBlock Text="Trạng thái:"/>
            <ComboBox x:Name="cbStatus" Margin="0,5,0,10">
                <ComboBoxItem Content="Active"/>
                <ComboBoxItem Content="Draft"/>
                <ComboBoxItem Content="Deleted"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="✔ OK" Width="100" Margin="0,0,10,0" Click="BtnOK_Click"/>
                <Button Content="✖ Hủy" Width="100" Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
