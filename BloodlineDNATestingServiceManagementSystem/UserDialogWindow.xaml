<Window x:Class="BloodlineDNATestingServiceManagementSystem.View.UserDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin người dùng"
        Height="540" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFFDFDFD">

    <Border Padding="20" Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Các field -->
                <TextBlock Text="📝 Nhập thông tin người dùng" FontSize="22" FontWeight="Bold" Foreground="#3E3E3E" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="👤 Họ tên:" FontWeight="SemiBold" Foreground="#444"/>
                <TextBox x:Name="txtFullName" Height="32" Background="#FFF8EB" Margin="0,5,0,10"/>

                <TextBlock Text="📧 Email:" FontWeight="SemiBold" Foreground="#444"/>
                <TextBox x:Name="txtEmail" Height="32" Background="#FFF8EB" Margin="0,5,0,10"/>

                <TextBlock Text="🔑 Mật khẩu:" FontWeight="SemiBold" Foreground="#444"/>
                <PasswordBox x:Name="txtPassword" Height="32" Background="#FFF8EB" Margin="0,5,0,10"/>

                <TextBlock Text="📞 Số điện thoại:" FontWeight="SemiBold" Foreground="#444"/>
                <TextBox x:Name="txtPhone" Height="32" Background="#FFF8EB" Margin="0,5,0,10"/>

                <TextBlock Text="🔒 Trạng thái:" FontWeight="SemiBold" Foreground="#444"/>
                <ComboBox x:Name="cbStatus" Height="32" Background="#FFF8EB" Margin="0,5,0,10">
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Inactive"/>
                </ComboBox>

                <TextBlock Text="🎭 Vai trò:" FontWeight="SemiBold" Foreground="#444"/>
                <ComboBox x:Name="cbRole" Height="32" Background="#FFF8EB" Margin="0,5,0,10"
                          DisplayMemberPath="RoleName"
                          SelectedValuePath="RoleId"/>

                <!-- Nút -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="✔ OK"
                            Width="100" Height="40"
                            Background="#4CAF50" Foreground="White"
                            FontWeight="Bold" Margin="0,0,10,0"
                            Click="BtnOK_Click"
                            BorderThickness="0" Cursor="Hand"/>
                    <Button Content="✖ Hủy"
                            Width="100" Height="40"
                            Background="#F44336" Foreground="White"
                            FontWeight="Bold"
                            Click="BtnCancel_Click"
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
