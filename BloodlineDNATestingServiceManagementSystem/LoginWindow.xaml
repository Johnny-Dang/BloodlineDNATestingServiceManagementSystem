<Window x:Class="BloodlineDNATestingServiceManagementSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodlineDNATestingServiceManagementSystem"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="LoginWindow" Height="400" Width="700" Background="#FFBAE6FD">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="#FF6B705C"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#FFFFF8EB"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#FFB38B82"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*" />
            <RowDefinition Height="266*" />
            <RowDefinition Height="59*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="350" RenderTransformOrigin="0.5,0.5" Margin="50,0,0,38" Grid.RowSpan="3">
           
            <Label Content="Email:" FontSize="26" Foreground="#FF1E3A8A" Margin="0,10,0,5"/>
            <TextBox Name="txtEmail" Height="34" Background="#FFF0F9FF" FontSize="20"/>
            <Label Content="Password:" FontSize="26" Foreground="#FF1E3A8A" Margin="0,10,0,5"/>
            <TextBox Name="txtPassword" Height="34" Background="#FFF0F9FF" FontSize="20"/>
            <Button x:Name="btnLogin" Content="Login" Width="120" Height="62" Margin="0,30,0,0" Background="#FF1E3A8A" Foreground="White" FontWeight="bold" FontSize="20" HorizontalAlignment="Center" Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
